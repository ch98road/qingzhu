<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.docker.qmmall.mapper.CommodityMapper">

    <!--private Integer id;-->
    <!--private String name;-->
    <!--private String administraor;-->
    <!--private Integer type;-->
    <!--private String details;-->
    <!--private String pictureaddress;-->
    <!--private Date updatetime;-->


    <!--Integer addCommondity(Commodity commodity);-->
    <insert id="addCommodity">
        INSERT  INTO commodity(name,administraor,type,details,pictureaddress,updatetime) VALUES ('${name}','${administraor}','${type}','${details}','${pictureaddress}','${updatetime}')
    </insert>

    <!--LinkedList<Commodity> getCommondity(Commodity commodity);-->
    <select id="getCommodity" resultType="java.util.LinkedList">
        SELECT * FROM  order WHERE  name LIKE '%${name}%'
        <if test="administraor!=null">
            AND administraor LIKE '%${administraor}%'
        </if>
        <if test="type!=null">
            AND type = '${type}'
        </if>
        <if test="id!=null">
            AND id = '${id}'
        </if>;
    </select>

</mapper>